{{#each goodsBlock}}
      <div class="col-12 card mb-2">
        <div class="row ">

          <div class=" col-2  ps-4 pb-2 pt-2">
            <img src="{{image}}" alt="name" class="card-img-top" width="150" height="150">
          </div>
          <div class="col-4 pt-3 pb-2">
            <h5>{{name}}</h5>
            <div> {{description}}</div>
          </div>
          <div class="col-2 pt-4">
            <p>{{price.title}}</p>
            <p><b>{{price.value}}</b> </p>
          </div>
          <div class="col-2 pt-5 ">
            <p>{{amount}}</p>
          </div>
          <div class="col-2 ">
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-primary mt-4 "> {{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-outline-danger mt-4"> {{text}}</button>
            {{/if}}


            {{/each}}
          </div>

        </div>


      </div>

      {{/each}}
