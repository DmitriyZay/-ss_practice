<main class="p-5">
	<header>
		<div class="row ">

			{{#with navigation}}
			<div class="nav col-12 mt-3 mb-5">
				{{#each links}}
				<div class="nav-item">
					<a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}} ">{{text}}</a>

				</div>
				{{/each}}

			</div>
			{{/with}}
			<div class="col-12 mb-4">

				<ol class="breadcrumb ">
					{{#each breadcrumb}}
					<li class="breadcrumb-item">
						{{#if url}}
						<a href="{{url}}" class="link-decoration">{{name}}</a>
						{{else}}
						{{name}}
						{{/if}}
					</li>
					{{/each}}
				</ol>
			</div>



		</div>
	</header>

	<section class="row">
		<h1>{{header}}</h1>

		{{#each sortBlock}}
		<div class="col-3">
			<select class="form-select">
				<option selected disabled>{{placeholder}}</option>
				{{#each options}}
				<option value="{{value}}">{{text}}</option>
				{{/each}}
			</select>
		</div>

		{{/each}}
	</section>
	<section class="row">
		<div class="col-4">
{{#with filterBlock}}
<div>
	{{!-- {{#each sellers}} --}}
	<p>{{sellers.title}}</p>
	{{!-- {{#each}} --}}
</div>
{{/with}}

		</div>
		<div class="col-8">

		</div>

	</section>


	<hr class="mb-2">
	<footer class="row">


		{{#each footer}}
		<div class="nav col-2 ">
			{{#each this}}
			<div class="nav=item">

				<a href="{{this.link}}" class="nav-link {{#if @last}} disabled {{/if}}">
					{{this.text}}</a>
			</div>
			{{/each}}
		</div>
		{{/each}}



	</footer>
</main>