<main class="p-5">

  <header class="row mb-3">
    <div class="col-12 card p-2">
      {{#each navigation}}
      <div class="nav">
        {{#each this}}
        <div class="nav-item">
          <a href="{{href}}" class="nav-link
{{#if @last}} disabled {{/if}}"> {{text}}</a>
        </div>
        {{/each}}
      </div>
      {{/each}}
    </div>
  </header>

  <body>
    <section>
      <div class="row mt-5">
        <div class="col-8 ">
          <div class="row">
            <div class="col-12">
              {{#with formBlock}}
              <h1>{{header}}</h1>
              <div class="mt-2">
                <p>{{rating.title}}: {{rating.value}}</p>
              </div>
              <div class="row mt-3">

                <div class="nav nav-tabs">
                  {{#each actionBlock.tabs}}

                  <div class="nav-item">
                    <a href="#" class="nav-link {{#if isActive}} active{{/if}}">
                      {{#if isActive}}
                      <b>{{text}}</b>
                      {{else}}
                      {{text}}
                      {{/if}}
                    </a>

                  </div>

                  {{/each}}
                </div>
              </div>

            </div>

            <hr class="mt-5 mb-5">
            <div class="col-12 card p-3">
              {{#with actionBlock.report}}
              <div class="mb-2">{{title}} </div>
              <div>
                <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
              </div>

              {{/with}}
            </div>
            <hr class="mt-5 mb-5">
            <div class="col-12">
              {{#with feedbackBlock}}
              <h3 class="mb-4">{{title}}</h3>

              <div class="nav mb-4">
                {{#each buttons }}
                <div class="nav-item me-2">
                  <a href="link" class="btn   
                    {{#if isWarning}} text-light btn-warning
                    {{else}} 
                    {{#if isSuccess }} btn-success
                    {{else}}
                    {{#if isDanger}} btn-danger
                    {{/if}} {{/if}} {{/if}}">
                    {{text}}</a>
                </div>
                {{/each}}

              </div>





              {{/with}}
            </div>


          </div>




        </div>

        <div class="col-4 ">
          {{#with goodsInfo}}
          <div class="row ps-3">
            <div class="col-12 card p-2">
              <div class="card-img-top">
                <img src="{{photo}}" alt="{{name}}">
                <div class="card-title mt-2 ms-1">
                  <b>{{name}}</b>
                </div>
              </div>

            </div>
            <div class="col-12 card mt-2">
              <h5 class="mt-2"> <b>{{price}}</b></h5>
              <div>{{#if inMarket}}
                <p>Є в наявності</p>
                {{else}}
                <p> Немає в наявності</p>
                {{/if}}
                {{#each buttons}}
                <div class="mb-2">
                  <a href="link"
                    class="btn {{#if isPrimary}} btn-primary {{else}} {{#if isSecondary}} btn-secondary {{/if}} {{/if}} ">{{text}}</a>
                </div>
                {{/each}}
              </div>

            </div>
            <div class="col-12 card mt-2 p-2">
              {{#with seller}}
              <div class="ms-2">{{title}}: <b>{{value}}</b> </div>
              {{/with}}
            </div>
          </div>



          {{/with}}
        </div>
      </div>


      {{/with}}
    </section>
    <hr class="mt-5 mb-5">
    <section>
      {{#each reviewList}}
      <div class="row">

        <div class="col-12 card pt-2 mb-5">
          <div class="row ps-3 pe-3 pt-2">
            <div class="col-12 p-1 card">
              {{#with title}}
              <div> <b>{{userName}} </b> </div>
              <div>{{caption}} </div>
              <div> {{date}}</div>
              {{/with}}
            </div>
            <div class="col-12 p-1 card mb-4">
              {{#with reviewBody}}
              <div> {{seller.title}}: {{seller.value}}</div>
              <div> {{rating.title}}: {{rating.value}}</div>
              <p>{{text}}</p>
              <div><b>{{advantages.title}}</b></div>
              <div>{{advantages.text}}</div>
              <div> <b>{{disadvantages.title}}</b></div>
              <div>{{disadvantages.text}}</div>

              <div class="nav m-2 ">
                {{#each images}}
                <div class="nav-item me-2">
                  <img src="{{this}}" alt="photo">
                </div>
                {{/each}}
              </div>
            </div>



            {{#each coments}}
            {{!-- <div class="row">

            </div>
            <div class="col-1"> </div> --}}
            <div class="col-12 card  ms-5 mb-4 p-2">


              <div> <b>{{this.userName}} </b> </div>
              <div class="mt-1 mb-1">{{this.date}} </div>
              <div> {{this.text}}</div>

            </div>
            {{/each}}



            {{/with}}


          </div>
        </div>

      </div>

      {{/each}}

      {{#with service}}
      <div class="row">
        <div class="col-12 card text-bg-success text-center p-2">


          <h2 class="mb-3">{{title}}</h2>
          <p>{{description}}</p>
          <div>
            {{#each buttons}}
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
            {{/each}}
          </div>
        </div>

      </div>


    </section>
  </body>
  <hr class="mt-5 mb-5">
  {{/with}}
  <footer>
    <div class="row">
      {{#each footer}}
      <div class="nav col-2">
        {{#each this}}
        
          <a href="{{this.link}}" class="nav-link
          {{#if @last}}disabled{{/if}}">
          {{this.text}}</a>

        
        {{/each}}

      </div>
      {{/each}}


    </div>
  </footer>
  
</main>