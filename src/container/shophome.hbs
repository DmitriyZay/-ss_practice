<main class="p-5">
  <section>
    <div class="card">
      {{#with navigation}}
      <div class="nav">
        {{#each links}}
        <div class="nav-item">

          <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>

        </div>

        {{/each}}
        </div>
      {{/with}}
    </div>
  </section>
  <section>

    <div>
      {{#with newsBlock}}
      <div class="text-center pt-5 pb-2">
        {{>title data=title big=false}}
      </div>
      <div class="row ">
        {{#each cards}}

        <div class="col-3">
          <div class="card mb-4 text-bg-dark">
            <h6 class="p-2">{{title}}
              {{#if isNew}}
              <span class="badge rounded-pill text-bg-success"> Нова</span>

              {{/if}}

              {{#if isTop}}
              <span class="badge rounded-pill text-bg-danger"> Топ</span>

              {{/if}}

            </h6>
            <p class="ps-2 pe-5">{{description}}</p>
          </div>
        </div>


        {{/each}}

      </div>
      {{/with}}

    </div>
    <hr class="mb-5 mt-5">
  </section>
  <section>

    {{#with goodsBlock}}
    <div class="nav nav-tabs mb-5">

      {{#each tabs}}
      <div class="nav-item">
        {{#if isDisabled}}

        <a href="#" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>

        {{else}}
        {{#if isActive}}
        <a href="#" class="nav-link text-dark active"> <b>{{text}}</b></a>


        {{else}}
        <a href="#" class="nav-link">{{text}}</a>
        {{/if}}

        {{/if}}


      </div>


      {{/each}}

    </div>

    <div class="row">
      {{#each cards}}
      <div class="col-4 mb-4">
        <div class="card">
          <img class="card-img-top mb-2" src="{{image}}" alt="{{title}}">
          <div class="card-title ps-3 ">
            <b>{{title}}</b>
            {{#if isHot}}
            <span class="badge text-bg-warning text-light rounded-pill text-uppercase">hot!</span>

            {{/if}}
            {{#if isNew}}
            <span class="badge text-bg-primary  rounded-pill">Нове</span>

            {{/if}}
          </div>
          <p class="card-body"> {{description}}</p>
        </div>

      </div>
      {{/each}}

    </div>
    {{/with}}

  </section>
  <hr class="mt-5 mb-5">
  <section>
    {{#with subscribe}}
    <div class="card text-bg-dark">
      <h2 class="mt-2 mb-4 ms-2">{{header}}</h2>
      <p class="ms-2">{{description}}</p>
      {{#each buttons}}
      <div class="mb-2  ms-2">
        <a class="btn btn-primary " href="{{link}}">{{text}}</a>
      </div>
      {{/each}}

    </div>
    {{/with}}
  </section>
  <hr class="mb-5 mt-5">
  <section>
    {{#with service}}
    <div class="card text-bg-success text-center">
      <h2 class="mt-2 mb-4 ms-2">{{title}}</h2>
      <p class="ms-2">{{description}}</p>
      {{#each buttons}}
      <div class="mb-2  ms-2">
        <a class="btn btn-primary " href="{{link}}">{{text}}</a>
      </div>
      {{/each}}

    </div>
    {{/with}}
  </section>
  <hr class="mb-5 mt-5">

  <footer>
 
    <div class="row ">
      {{#each footer}}
      <div class=" nav col-2">  
        {{#each this}}
        <div>
          <a class="nav-link {{#if @last}} disabled {{/if}}"

          href="{{this.link}}">{{this.text}}</a>
        </div>

        {{/each}}
      
      </div>
    
      {{/each}}
    </div>

     
    
  </footer>

</main>