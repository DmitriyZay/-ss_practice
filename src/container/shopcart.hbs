<main class="p-5">

  <div class="row">

    <section class="mb-4">
      {{#with navigation}}
      <div class="col-12 card">
        <div class="nav">
          {{#each links}}
          <div class="nav-item">
            <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
          </div>
          {{/each}}
        </div>
      </div>
      {{/with}}
    </section>
    <section>
      <div class="col-12">
        {{#with header}}
        <h2>{{title}}</h2>
        <div class="mt-3 mb-4">
          <a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a>
        </div>
        {{/with}}
      </div>

    </section>
    <div>
      <hr class="mt-4">
    </div>

    <section>
      {{#each goodsBlock}}
      {{>cartGoodsitem goodsBlock=goodsBlock}}
      {{/each}}
    </section>


    <div>
      <hr class="mt-4">
    </div>
    <section>
      <div class="col-12">
        {{#with total}}
        <h4>{{title}}</h4>
        <h2>{{amount}}</h2>
        <p>{{delivery}}</p>
        <div class="nav">
          {{#each buttons}}
          <div class="nav-item">
            <a href="{{link}}"
              class=" mb-3 btn {{#if isSuccess}} btn-success {{else}}{{#if isOutline}} btn-outline-success{{/if}} {{/if}}">{{text}}</a>
            {{/each}}
          </div>

        </div>



        {{/with}}
      </div>

    </section>
    <div>
      <hr class="mt-4">
    </div>

    <section>
      {{#with goodsOtherBlock}}
      <div class="col-12">

        <h4 class="text-center mt-4 mb-2">{{title}}</h4>
        <div class="row">
          {{#each cards}}

          <div class="col-4">
            <div class="card ">

              <img src="{{image}}" alt="" class="card-img-top">
              <div class="card-title ps-3 mt-2"><b> {{title}} </b>
                {{#if idNew}}
                <span class="badge text-bg-warning rounded-pill text-uppercase text-light"> hot!</span>
                {{/if}}
                {{#if isHot}}
                <span class="badge text-bg-primary rounded-pill text-capitalize "> нове</span>
                {{/if}}

              </div>
              <p class="card-body"> {{description}}</p>
            </div>
          </div>


          {{/each}}

        </div>



      </div>

      {{/with}}
    </section>
    <div>
      <hr class="mt-4">
    </div>
    <section>

      <div class="col-12 card text-bg-dark ps-2 mt-3">

        {{#with subscribe}}
        <h4 class="mt-2">{{header}}</h4>
        <p>{{description}}</p>

        {{#each buttons }}
        <div class="mb-2">
          <a href="link" class="btn btn-primary">{{text}}</a>
        </div>
        {{/each}}

        {{/with}}
      </div>


    </section>
    <div>
      <hr class="mt-4">
    </div>

    <footer class="col-12">
      <div class="row">
        {{#each footer}}
        <div class="nav col-2 ">
          {{#each this}}
          <div>
            <a href="{{this.link}}" class="nav-link {{#if @last}} disabled {{/if}}">
              {{this.text}}</a>
          </div>
          {{/each}}
        </div>

        {{/each}}

      </div>
    </footer>

  </div>
</main>